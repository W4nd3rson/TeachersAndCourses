@model Domain.Models.Course

@{
    ViewData["Title"] = "Detalhes do Curso";
}

<h2>Detalhes do Curso</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
    </dl>
</div>

@if (Model.Teatchers != null)
{
    <h4>Professores que ministram este curso : </h4>

    <table class="table">
        @foreach (var teatcher in Model.Teatchers)
        {
            <tr>
                <td>
                    <a asp-controller="Teatchers" asp-action="Details" asp-route-id="@teatcher.Id"> @teatcher.Name</a>
                </td>
            </tr>
        }
    </table>
}
<div>
    <a asp-action="Index">Voltar</a>
</div>
